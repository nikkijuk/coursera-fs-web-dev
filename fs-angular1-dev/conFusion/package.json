{
  "name": "conFusion",
  "private": true,
  "version": "0.0.1",
  "description": "see: https://gist.github.com/xtrasmal/00b856718aa41011b169",
  "main": "menu.html",
  "scripts": {
    "build": "npm run build-js & npm run build-sass & npm run build-images",
    "build-images": "imagemin './app/images/*' './dist/images/*' -p",
    "build-js": "browserify './app/scripts/app.js' -o './dist/scripts/app.js'",
    "build-sass": "node-sass './app/styles/app.scss' './dist/app.css'",
    "build-min-js": "browserify './app/scripts/app.js' | uglifyjs -o './dist/scripts/app.min.js'",
    "build-min-sass": "node-sass './app/styles/app.scss' | cleancss -o './dist/app.min.css'",
    "watch-js": "nodemon -e js -w app/js -x 'npm run build-js'",
    "watch-sass": "nodemon -e scss -w app/css -x 'npm run build-sass'",
    "browsersync": "browser-sync start --files 'app/build' --server --reload-delay 500",
    "production": "npm run build-min-js & npm run build-min-sass",
    "watch": "npm run browsersync & npm run watch-js & npm run watch-sass",
    "babel": "babel './app/scripts/app.js' --watch --out-file './app/scripts/build/app-babel.js '--source-maps",
    "copy": "copyfiles -f './app/images/**' './dist/images'",
    "json": "node ./node_modules/json/lib/json.js"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "browser-sync": "^2.16.0",
    "browserify": "^9.0.7",
    "clean-css": "^3.1.9",
    "copyfiles": "^0.2.1",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-cache": "^0.4.5",
    "gulp-changed": "^1.3.2",
    "gulp-concat": "^2.6.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-jshint": "^2.0.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-ng-annotate": "^2.0.0",
    "gulp-notify": "^2.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-rev": "^7.1.2",
    "gulp-uglify": "^2.0.0",
    "gulp-usemin": "^0.3.24",
    "imagemin": "^4.0.0",
    "jshint": "^2.9.3",
    "jshint-stylish": "^2.2.1",
    "json": "^9.0.3",
    "node-sass": "^2.1.1",
    "nodemon": "^1.9.1",
    "uglifyjs": "^2.4.10"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
